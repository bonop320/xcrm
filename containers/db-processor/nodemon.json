{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "notify-send -t 2500 -a nodemon \"App restarted\" \"$FILENAME\""
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
